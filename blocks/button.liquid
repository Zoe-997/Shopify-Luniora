      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 10,
      "visible_if": "{{ block.settings.default_border == false }}"
    },
    {
      "type": "header",
      "content": "t:content.padding"
    },
    {
      "type": "range",
      "id": "padding-block",
      "label": "t:settings.padding_block",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 10
